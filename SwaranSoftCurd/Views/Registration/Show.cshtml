@model IEnumerable<SwaranSoftCurd.Models.StudentJoin>

@{
    ViewData["Title"] = "Show";
}

<h1 style="background-color:aqua">Student Details</h1>

@* <p>
    <a asp-action="Create">Create New</a>
</p> *@
@if (TempData["AlertMessage"] != null)
{
    <script type="text/javascript">
        window.onload = function () {
            var message = '@TempData["AlertMessage"]';
            alert(message);
        };
    </script>
}

<div>
    <table>
        <thead>
            <tr>
                <th>
                    <a asp-action="Create" class="btn btn-primary">Add New Student</a>
                </th>
            </tr>
        </thead>
    </table>
</div>
<table class="table" style="background-color:floralwhite">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Mobile)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.State)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.City)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AboutYourself)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.UploadPhoto)
            </th>
           
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Mobile)
            </td>
                <td>
                    @Html.DisplayFor(modelItem => item.State)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.City)
                </td>
            <td>
                @Html.DisplayFor(modelItem => item.AboutYourself)
            </td>
                <td>
                    <img src="~/PICS/@item.UploadPhoto" style="width:50px;height:60px" />
                </td>
           
            <td>
                <a asp-action="Create" asp-route-id="@item.Id" class="btn btn-outline-success">Edit</a> |
              @*   <a asp-action="Details" asp-route-id="@item.Id">Details</a> | *@
                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
